    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>asg.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartMainController</servlet-name>
        <servlet-class>asg.shopping.controllers.CartMainController</servlet-class>
